<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.codecentric.pma_movieapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher1"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.MovieDetailActivity" />
        <activity android:name=".activities.SeriesDetailActivity" />
        <activity android:name=".activities.ActorDetailActivity" />
        <activity android:name=".activities.EpisodeDetailActivity" />
        <activity android:name=".activities.SeasonDetailActivity"></activity>
    </application>

</manifest>